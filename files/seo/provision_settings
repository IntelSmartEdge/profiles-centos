# Repository address
# Format must be: `github.com/org/repo` - no https://
# It'll be concated with protocol and token
export url=github.com/smart-edge-open/open-developer-experience-kits

# Github token
export gh_token=

# Branch to checkout on cloning
export branch=main

# Experience Kit flavor
export flavor=dek

# either `single-node` or `multi-node`
export scenario=single-node

# MAC address of Controller's primary interface
# Used in deployment of multi node cluster
# If empty, it is assumed that machine is a Controller
export controller_mac=

# Path where Experience Kits will be cloned to
export ek_path=
